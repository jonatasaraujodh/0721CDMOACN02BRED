<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ex01.FormularioFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_form_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/til_form_email"
        android:layout_marginTop="10dp"
        android:hint="@string/label_hint_nome"
        android:textColorHint="#8492A6"
        app:helperTextTextColor="#8492A6">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_form_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#3F51B5"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:inputType="textPersonName"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_form_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/til_form_nome"
        app:layout_constraintStart_toStartOf="@id/til_form_nome"
        app:layout_constraintEnd_toEndOf="@id/til_form_nome"
        app:layout_constraintBottom_toTopOf="@id/til_form_senha"
        android:layout_marginTop="5dp"
        android:hint="Email"
        android:textColorHint="#8492A6"
        app:helperTextTextColor="#8492A6">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_form_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#3F51B5"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_form_senha"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/til_form_email"
        app:layout_constraintStart_toStartOf="@id/til_form_email"
        android:layout_marginTop="5dp"
        android:hint="Senha"
        android:textColorHint="#8492A6"
        app:helperTextTextColor="#8492A6">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_form_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#3F51B5"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:inputType="textVisiblePassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_form_confirma_senha"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/til_form_senha"
        app:layout_constraintEnd_toEndOf="@id/til_form_email"
        android:hint="Senha"
        android:textColorHint="#8492A6"
        app:helperTextTextColor="#8492A6">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_form_confirma_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#3F51B5"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:inputType="textVisiblePassword"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/bt_formulario_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/til_form_senha"
        app:layout_constraintStart_toStartOf="@id/til_form_senha"
        app:layout_constraintEnd_toEndOf="@id/til_form_confirma_senha"
        android:text="@string/label_bt_cadastrar"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>