<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.example.aula28.ex01.ScreenActivity">

        <FrameLayout
            android:id="@+id/container_01_ex03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="20"
            android:background="@color/orange"/>

        <FrameLayout
            android:id="@+id/container_03_ex03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="20"
            android:background="@color/red_button"/>

        <FrameLayout
            android:id="@+id/container_04_ex03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="20"
            android:background="@color/teal_700"/>

        <FrameLayout
            android:id="@+id/container_05_ex03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="20"/>

        <FrameLayout
            android:id="@+id/container_02_ex03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="20"/>

</LinearLayout>